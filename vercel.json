{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "^/assets/(.*)$", "dest": "/dist/assets/$1" },
    { "src": "^/(.*)$", "dest": "/dist/$1" },
    { "src": "^/(?!assets/).*", "dest": "/dist/index.html" }
  ]
}
